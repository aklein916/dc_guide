<h2>Add A Studio to Our List!</h2>
<%= form_for @workout do |f| %>
  <%= f.label :name %>
  <%= f.select (:name, options_for_select([{'Yoga', 1}, {'Crossfit', 2}, {'Pilates/Barre', 3}, {'HIIT', 4}, {'Spin', 5}]))%>

  <%= f.label :place %>
  <%= f.text_field :name %>

  <%= f.label :equipment %>
  <%= f.text_field :equipment %>

  <%= f.label :photo %>
  <%= f.text_field :img_url %>

  <%= f.submit %>
<% end %>


